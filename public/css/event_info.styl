h3
	color white
	margin 0 
#info_logo
	margin-top 1em
	opacity 0.8
	width 150px
.info_section
	text-align center
	width 100%
	.info_article
		margin 1em 
		text-align left
		.info_title
			background-color rgba(255, 255, 255, .07)
			border-top solid 0.15em #ccc
			border-bottom solid 0.15em #ccc
			margin 0.5em 0
			padding 0.5em 0
			h1 
				color #eee
				font-size 2.5em
				display inline
		.info_content
			margin 1em 0 
			p , .info_list
				color #ddd
				font-size 1.5em
				padding 0 10%
		.info_subtitle
			color #ddd
			font-weight bold

		.info_list
			background none
			border none
			text-align left
			margin 0 
			padding 0 
			span
				font-weight bold
			li 
				width 100%
				margin 0.5em 0
		a 
			color #ddd
			font-size 1.2em
			font-weight bold
			text-decoration underline
			padding 0 0.5em
			border-radius 0.3em
			background-color rgba(250, 250, 250, .3)
		a:hover
			color black


.info_content
	.social_container
		text-align center
		a
			background none
.info_content
	display none




